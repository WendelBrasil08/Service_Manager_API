{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "lib": ["ES2020", "DOM"],
        "types" : ["node"],
        "moduleResolution": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "."
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]

}